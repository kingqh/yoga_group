/* pages/index/index.wxss 首页样式 */

/* 海报样式 */
.poster-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.poster-modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
}

.poster-modal-content {
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  /* background: white; */
  border-radius: 24rpx;
  /* padding: 32rpx; */
}

.poster-canvas {
  width: 100%;
  height: 1000rpx;
}

.poster-action-buttons {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-around;
}

.poster-action-btn {
  flex: 0.45;
  height: 96rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.poster-share-btn {
  background: #07c160;
  color: white;
}

.poster-save-btn {
  background: #ff4444;
  color: white;
}

.poster-btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

/* 海报样式 */

.group-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  overflow: hidden;
  align-items: center;
  justify-content: center;
}

.group-title-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}

.activity-title {
  font-size: 35rpx;
  font-weight: bold;
  color: #e64340;
  text-align: center; 
}

.cover {
  width: 100%;
  height: 1200rpx;
}

.content {
  padding: 24rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.price-box {
  margin-bottom: 24rpx;
}
.current {
  font-size: 40rpx;
  color: #FF6B6B;
  font-weight: bold;
}
.original {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 16rpx;
}

.progress-box {
  margin-bottom: 32rpx;
}
progress {
  width: 60%;
}
.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
}

.primary-btn {
  background: #FF6B6B;
  color: #fff;
  border-radius: 50rpx;
  flex: 1;
  margin-right: 20rpx;
}

.share-btn {
  background: #fff;
  border: 1rpx solid #FF6B6B;
  color: #FF6B6B;
  border-radius: 50rpx;
  width: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* pages/index/index.wxss 新增样式 */
/* 右侧悬浮按钮 */
.fixed-share {
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255,107,107,0.9);
  box-shadow: 0 8rpx 16rpx rgba(255,107,107,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.share-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 分享菜单 */
.share-menu {
  position: fixed;
  right: 30rpx;
  bottom: 300rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  padding: 20rpx;
  z-index: 1000;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

/* 调整按钮样式 */
.action-box {
  display: flex;
  gap: 20rpx; /* 按钮间距 */
}

.join-btn {
  flex: 1;
  background: #FF6B6B;
  color: #fff;
  border-radius: 50rpx;
}

.join-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.create-btn {
  flex: 1;
  background: #fff;
  border: 1rpx solid #FF6B6B;
  color: #FF6B6B;
  border-radius: 50rpx;
}

.share-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 999;
}

.countdown-item {
  display: inline-block;
  width: 22px;
  margin-right: 5px;
  margin-left: 5px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  background-color: #1989fa;
  border-radius: 2px;
}

.countdown-box {
  display: flex;          /* 启用弹性布局 */
  flex-direction: row;    /* 子元素横向排列（默认值，可省略） */
  justify-content: center; /* 水平居中 */
  align-items: center;    /* 垂直居中 */
  width: 100%;            /* 按需设置宽度 */
  font-size: 12px;
  font-weight:bold
}

.countdown-box-text {
  font-size: 12px;
  font-weight:bold
}


/* 授权登陆 csss 开始 */
/* 遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

/* 弹窗容器 */
.auth-modal {
  width: 80%;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  transform: translateY(100%);
  opacity: 0;
  transition: all 0.3s ease;
}

/* 弹窗内容 */
.modal-content {
  padding: 40rpx;
  text-align: center;
}

/* 授权按钮样式 */
.auth-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  margin-top: 40rpx;
  font-size: 28rpx;
}

/* 用户信息展示 */
.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 20rpx auto;
}

.user-name {
  font-size: 32rpx;
  color: #333;
  margin: 20rpx 0;
}

.close-tip {
  color: #999;
  font-size: 24rpx;
}
/* 授权登陆 csss 结束 */

/* 页面最下方全局开团按钮 */

/* 页面最下方全局开团按钮结束 */

.fixed-container {
  position: fixed;
  z-index: 3;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  /* 适配iPhoneX等底部安全区域 */
  padding-bottom: calc(15rpx + env(safe-area-inset-bottom));
}

.global-btn {
  flex: 3;
  height: 90rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
}

.left-btn {
  background: #ff4444;
  color: white;
}

.right-btn {
  background: #ffd700;
  color: #333;
}

/* 文字动画 */
.animate-text {
  animation: textScale 1s ease-in-out infinite;
}

@keyframes textScale {
  0%, 100% {
    font-size: 35rpx;
  }
  50% {
    font-size: 43rpx;
  }
}

