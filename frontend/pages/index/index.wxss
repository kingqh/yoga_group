/* pages/index/index.wxss 首页样式 */
.container {
  background: #f5f5f5;
  min-height: 100vh;
}

.activity-card {
  background: #fff;
  border-radius: 16rpx;
  /* margin: 20rpx; */
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.cover {
  width: 100%;
  height: 1200rpx;
}

.content {
  padding: 24rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.price-box {
  margin-bottom: 24rpx;
}
.current {
  font-size: 40rpx;
  color: #FF6B6B;
  font-weight: bold;
}
.original {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 16rpx;
}

.progress-box {
  margin-bottom: 32rpx;
}
progress {
  width: 60%;
}
.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
}

.primary-btn {
  background: #FF6B6B;
  color: #fff;
  border-radius: 50rpx;
  flex: 1;
  margin-right: 20rpx;
}

.share-btn {
  background: #fff;
  border: 1rpx solid #FF6B6B;
  color: #FF6B6B;
  border-radius: 50rpx;
  width: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* pages/index/index.wxss 新增样式 */
/* 右侧悬浮按钮 */
.fixed-share {
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255,107,107,0.9);
  box-shadow: 0 8rpx 16rpx rgba(255,107,107,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.share-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 分享菜单 */
.share-menu {
  position: fixed;
  right: 30rpx;
  bottom: 300rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  padding: 20rpx;
  z-index: 1000;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

/* 调整按钮样式 */
.action-box {
  display: flex;
  gap: 20rpx; /* 按钮间距 */
}

.join-btn {
  flex: 1;
  background: #FF6B6B;
  color: #fff;
  border-radius: 50rpx;
}

.join-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.create-btn {
  flex: 1;
  background: #fff;
  border: 1rpx solid #FF6B6B;
  color: #FF6B6B;
  border-radius: 50rpx;
}

.share-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 999;
}

/* pages/index/index.wxss 新增样式 */
/* 海报生成按钮 */
.fixed-poster {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(94,185,155,0.9);
  box-shadow: 0 8rpx 16rpx rgba(94,185,155,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.poster-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 海报预览模态框 */
.poster-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.8);
  z-index: 1001;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.canvas {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
}

.action-btns {
  margin-top: 40rpx;
  display: flex;
  gap: 30rpx;
}

.save-btn {
  background: #5EB99B;
  color: #fff;
  min-width: 200rpx;
}

.close-btn {
  background: #666;
  color: #fff;
  min-width: 200rpx;
}